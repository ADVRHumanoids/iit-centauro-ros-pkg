<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="centauro">

<!-- 
  ROS urdf definition of the CENTAURO humanoid robot by Istituto Italiano di Tecnologia
  
  Author: Enrico Mingo Hoffman
-->

<xacro:include filename="$(find centauro_urdf)/urdf/utils.urdf.xacro" />
<xacro:include filename="$(find centauro_urdf)/urdf/parts/kinematics_properties.urdf.xacro" />
<xacro:include filename="$(find centauro_urdf)/urdf/parts/inertial_properties.urdf.xacro" />
<xacro:include filename="$(find centauro_urdf)/urdf/parts/limits.urdf.xacro" />

<xacro:property name="a" value="0.1"/> <!-- along x -->
<xacro:property name="b" value="0.1"/> <!-- along y -->
<xacro:property name="c" value="1.5"/> <!-- along z -->


<link name="base_link">

    <visual>
      <geometry>
        <box size="${a} ${b} ${c}"/>
      </geometry>
    </visual>

    <collision>
      <geometry>
        <box size="${a} ${b} ${c}"/>
      </geometry>
    </collision>

</link>

<xacro:property name="r" value="0.1"/> <!-- along x -->
<xacro:property name="h" value="0.1"/> <!-- along y -->
<xacro:property name="m" value="1.0"/>
 
<link name="pelvis">
    <inertial>
      <mass value="${m}"/>
      <inertia ixx="${(m/48)*(6*r*r + 4*h*h)}" ixy="0.0" ixz="0.0" iyy="${(m/48)*(6*r*r + 4*h*h)}" iyz="0.0" izz="${m*h*h/4.}"/>
    </inertial>

    <visual>
      <geometry>
        <cylinder length="${h}" radius="${r}"/>
      </geometry>
    </visual>

    <visual>
      <geometry>
        <cylinder length="${h}" radius="${r}"/>
      </geometry>
    </visual>

</link>

<joint name="passive_joint" type="prismatic">
    <parent link="base_link"/>
    <child link="pelvis"/>
    <origin xyz="${r+0.05} 0. ${c/2. + h/2.}"/>
    <axis xyz="0 0 1"/>
    <limit effort="1000.0" lower="${-c}" upper="0." velocity="100."/>
</joint>


<xacro:include filename="$(find centauro_urdf)/urdf/parts/centauro_leg.urdf.xacro" />
<xacro:centauro_leg leg_num="1" origin_x="0" origin_y="0" />

<!-- <xacro:if value="${ADD_LEGS}">
	<xacro:include filename="$(find centauro_urdf)/urdf/parts/legs.urdf.xacro" />
</xacro:if> -->



</robot>

